<h2>Record Attempt</h2>

<div>
  <%= form_for [@route, @attempt] do |f| %>
    <%= f.label :athlete_id, "Athlete" %>
    <%= f.collection_select :athlete_id, @athletes, :id, :name_last_first,
      include_blank: true %>

    <%= f.label :score %>
    <%= f.number_field :score, step: 0.01 %>

    <%= f.submit "Record Attempt", class: "button tiny success" %>
  <% end %>
</div>
